pipeline {
    agent any

    environment {
        SNYK_TOKEN = credentials('snyk-api-token') // Replace 'snyk-api-token' with the actual Jenkins credential ID for your Snyk API token
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'docker-compose build'
            }
        }

        stage('SCA and SAST with Snyk') {
            steps {
                sh 'npm install -g snyk'
                sh 'snyk auth $SNYK_TOKEN'
                sh 'snyk test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
